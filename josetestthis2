//code by: Evita Kanaan
// Motor A connections
int enA = 9;
int in1 = 8;
int in2 = 7;

// Temperature sensor pin
int tempSensorPin = A0; // Change this to the pin your temperature sensor is connected to

// Temperature threshold for turning on the fan
float tempThreshold = 25.0; // Change this to the desired temperature threshold

void setup() {
  // Set all the motor control pins to outputs
  pinMode(enA, OUTPUT);
  pinMode(in1, OUTPUT);
  pinMode(in2, OUTPUT);

  // Set the temperature sensor pin to input
  pinMode(tempSensorPin, INPUT);
}

void loop() {
  // Read the temperature from the sensor
  float temp = analogRead(tempSensorPin);
  temp = temp * 0.48828125; // Convert the analog reading (which goes from 0 - 1023) to a voltage (0 - 5V)

  if (temp >= tempThreshold) {
    // Turn on the fan
    digitalWrite(in1, HIGH);
    digitalWrite(in2, LOW);
    analogWrite(enA, 255); // Set the fan to maximum speed
  } else {
    // Turn off the fan
    digitalWrite(in1, LOW);
    digitalWrite(in2, LOW);
    analogWrite(enA, 0);
  }

  delay(1000); // Wait for 1 second before the next loop iteration
}
