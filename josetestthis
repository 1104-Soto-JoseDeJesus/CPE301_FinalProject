// Motor A connections
int enA = 9;
int in1 = 8;
int in2 = 7;

// Blue LED connection
int blueLED = 13; // Change this to the pin your blue LED is connected to

// Temperature threshold for turning on the fan
float tempThreshold = 25.0; // Change this to the desired temperature threshold

void setup() {
  // Existing setup code...

  // Set all the motor control pins to outputs
  pinMode(enA, OUTPUT);
  pinMode(in1, OUTPUT);
  pinMode(in2, OUTPUT);

  // Set the LED pin to output
  pinMode(blueLED, OUTPUT);
}

void loop() {
  float temp = readTemperature(); // Replace this with actual temperature reading function

  if (temp >= tempThreshold) {
    // Turn on the fan
    digitalWrite(in1, HIGH);
    digitalWrite(in2, LOW);
    analogWrite(enA, 255); // Set the fan to maximum speed
  } else if (temp < 0) {
    // Error state, turn on the blue LED
    digitalWrite(blueLED, HIGH);
  } else {
    // Idle state, turn off the fan and the blue LED
    digitalWrite(in1, LOW);
    digitalWrite(in2, LOW);
    analogWrite(enA, 0);
    digitalWrite(blueLED, LOW);
  }

  delay(1000); // Wait for 1 second before the next loop iteration
}
