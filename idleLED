// Code by: Evita Kanaan
//code sets up the states in which the system will go from idle to running (fan) 
//and running (fan) to error state with a blue LED
// Motor A connections
int enA = 9;
int in1 = 8;
int in2 = 7;

// Blue LED connection
int blueLED = 13; // Change this to the pin blue LED is connected to

// Temperature threshold for turning on fan
float tempThreshold = 25.0; // Change this to temperature threshold

void setup() {
  // Set all the motor control pins to outputs
  pinMode(enA, OUTPUT);
  pinMode(in1, OUTPUT);
  pinMode(in2, OUTPUT);

  // Set the LED pin to output
  pinMode(blueLED, OUTPUT);
}

void loop() {
  float temp = readTemperature(); // Replace this with actual temperature reading function from jose

  if (temp >= tempThreshold) {
    // Turn on fan
    digitalWrite(in1, HIGH);
    digitalWrite(in2, LOW);
    analogWrite(enA, 255); // Set fan to maximum speed
  } else if (temp < 0) {
    // Error state, turn on blue LED
    digitalWrite(blueLED, HIGH);
  } else {
    // Idle state, turn off fan and blue LED
    digitalWrite(in1, LOW);
    digitalWrite(in2, LOW);
    analogWrite(enA, 0);
    digitalWrite(blueLED, LOW);
  }

  delay(1000); // Wait for 1 second before the next loop
}
